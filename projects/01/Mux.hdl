/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here:

    Not(in=sel,out=invSel);
    And(a=invSel,b=a,out=Anda);
	And(a=sel,b=b,out=Andb);
	Or(a=Anda,b=Andb,out=out);
}